<section class="mt-3 rounded border border-2" id="newTask">
  <div class="d-flex flex-column bd-highlight ms-5 mt-3">
    <h3>Task Details :</h3>
    <div class="d-flex flex-row bd-highlight">
      <div class="p-2 bd-highlight h5">Title :</div>
      <div class="p-2 bd-highlight"><%= @task.title %></div>
    </div>
    <div class="d-flex flex-row bd-highlight">
      <div class="p-2 bd-highlight h5">Description :</div>
      <div class="p-2 bd-highlight"><%= @task.description %></div>
    </div>
    <div class="d-flex flex-row bd-highlight">
      <div class="p-2 bd-highlight h5">Status :</div>
      <div class="p-2 bd-highlight"><%= @task.status %></div>
    </div>
    <div class="d-flex flex-row bd-highlight">
      <div class="p-2 bd-highlight h5">Priority :</div>
      <div class="p-2 bd-highlight"><%= @task.priority %></div>
    </div>
    <div class="d-flex flex-row bd-highlight">
      <div class="p-2 bd-highlight h5">Planned Date :</div>
      <div class="p-2 bd-highlight"><%= @task.planned_date %></div>
    </div>
    <span class="ms-2">
      <button onclick="history.back()" type="button" class="btn btn-primary">Edit</button>
    </span>
  </div>
</section>