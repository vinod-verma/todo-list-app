<section class="mt-3 rounded border border-2" id="newTask">
  <div class="row justify-content-md-center">
    <div class="col-6 mt-3">
      <h2>Update Task</h2>
      <%= form_with scope: :task, url: "/task_block/tasks/#{@task.id}", method: :patch do |f| %>
        <div class="mt-3">
          <b><%= f.label :title, class: "form-label" %></b>
          <%= f.text_field :title, class: "form-control"%>
          <% if flash[:errors] && flash[:errors]["title"] %>
            <% flash[:errors]["title"].each do |message| %>
              <div><%= message %></div>
            <% end %>
          <% end %>
        </div>
        <div class="mt-3">
          <b><%= f.label :description, class: "form-label" %></b>
          <%= f.text_area :description, size:"50x5", class: "form-control"%>
          <% if flash[:errors] && flash[:errors]["description"] %>
            <% flash[:errors]["description"].each do |message| %>
              <div><%= message %></div>
            <% end %>
          <% end %>
        </div>
        <div class="mt-3">
          <label class="form-label"><b>Status</b></label><br>
          <span>
            <%= f.radio_button :status, "pending" %>
            <%= f.label :pending, "Pending" %>
          </span>
          <span class="ms-3">
            <%= f.radio_button :status, "completed" %>
            <%= f.label :completed, "Completed" %>
          </span>
        </div>
        <div class="mt-3">
          <label class="form-label"><b>Priority</b></label><br>
          <span>
            <%= f.radio_button :priority, "high" %>
            <%= f.label :high, "High" %>
          </span>
          <span class="ms-3">
            <%= f.radio_button :priority, "medium" %>
            <%= f.label :medium, "Medium" %>
          </span>
          <span class="ms-3">
            <%= f.radio_button :priority, "low" %>
            <%= f.label :low, "Low" %>
          </span>
        </div>
        <div class="mt-3">
          <b><%= f.label :planned_date, "Planned Date", class: "form-label" %></b><br>
          <%= f.date_field :planned_date, class: "rounded border border-1" %>
        </div>
        <div class="mt-3">
          <%= f.submit "Update Task", class: "btn btn-default btn-primary" %>
        </div>
        <% end %>
    </div>
  </div>
</section>