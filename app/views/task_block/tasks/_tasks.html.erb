<div class="d-flex flex-column rounded border border-1">
  <div class="trashed-table-scroll">
    <table style="width: 100%;">
    <tbody class="sortable">
    <% @task_list.each do |task, sortable_id| %>
      <tr id="<%= task.sortable_id %>">
      <td>
      <div class="d-flex flex-row" id="task_row_<%= task.id %>">
        <div class="form-check mt-3 ms-3">
          <input type="checkbox" class="form-check-input task-select-check" 
            id="task_<%= task.id %>" style="width: 20px; height: 20px;"
            data-task-id="<%= task.id %>"
          >
          <label class="form-check-label" for="task_<%= task.id %>"></label>
        </div>
        <div class="d-flex flex-row rounded border border-2 mt-2 ms-3" style="width: 92%; height: 55px; background-color: rgba(240,240,240)">
          <div class="d-flex flex-column w-75">
            <div class="d-flex flex-row">
              <div class="ps-2 h6" style="font-size: 20px;"><%= task.title%></div>
              <% priority = task.priority %>
              <% if priority %>
                <% if priority == "high" %>
                  <span class="badge text-danger ms-3">High</span>
                <% elsif priority == "medium" %>
                  <span class="badge text-warning ms-3">Medium</span>
                <% elsif priority == "low" %>
                  <span class="badge text-success ms-3">Low</span>
                <% end %>
              <% end %>
            </div>
            <div class="ps-2" style="font-size: 15px;"><%= task.description%></div>
          </div>
          <div class="mt-2 ms-5">
            <a href= <%= "/task_block/tasks/#{task.id}/edit" %> >
              <span class="icon text-blue" style="color: blue;">
                <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                  <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                  <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                </svg>
              </span>
            </a>
          </div>
          <div class="mt-2 ms-5">
          <%= link_to '<i><span class="icon text-blue" style="color: red;">
              <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
              </svg>
            </span></i>'.html_safe, task, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } 
          %>
          </div>
        </div>
      </div>
      </td>
      </tr>
    <% end %>
    </tbody>
    </table>
  </div>
</div>