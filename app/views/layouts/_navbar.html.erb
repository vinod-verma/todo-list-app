<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <%= link_to root_path, class:'navbar-brand border rounded text-light text-wrap fw-bold', style: "background: rgb(220, 53, 69);" do %>
      <i class="bi bi-check2-square ms-1" style="font-size: 25px; background: rgb(220, 53, 69);"></i>
      <span class='ms-1 me-2'>ToDo Bot</span>
    <% end %>
    <% if @current_user %>
      <div class="d-flex flex-row">
        <div class="p-2">
          <%= link_to notification_task_block_tasks_path, class:'text-decoration-none' do %>
            <span class='fw-bold' style="color: rgb(220, 53, 69);">
              <i class="bi bi-bell" style="font-size: 25px;"></i>
              <small>
                <% if @current_user.notifications.where(is_read: false).present? %>
                  <%= @current_user.notifications.where(is_read: false).count %>
                <% end %>
              </small>
            </span>
          <% end %>
        </div>
        <div class="p-2">
          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle fw-bold text-capitalize" style="background: rgb(220, 53, 69)"; type="button" data-bs-toggle="dropdown" aria-expanded="false">
              <%= image_tag "dummy_profile.jpeg", style: "width: 30px; border-radius: 50%; border: 2px solid #0d6efd;"%>
              <%= @current_user.first_name+" "+@current_user.last_name %>
            </button>
            <ul class="dropdown-menu" style="background: rgb(220, 53, 69)";>
              <li>
                <%= link_to "Sign Out", end_session_account_block_logins_path, class: 'dropdown-item fw-bold' %>
              </li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</nav>