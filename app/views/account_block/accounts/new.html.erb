<section class="mt-3"
  <div class="mask d-flex align-items-center h-100 gradient-custom-3">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Create an account</h2>
              <form accept-charset="UTF-8" action="/account_block/accounts" method="post">
                <div class="mb-3">
                  <label class="form-label required" for="first_name"><b>First Name</b></label>
                  <input class="form-control" id="first_name" name="account[first_name]" required="required" type="first_name">
                  <% if flash[:errors] && flash[:errors]["first_name"] %>
                    <% flash[:errors]["first_name"].each do |message| %>
                      <div><%= message %></div>
                    <% end %>
                  <% end %>
                </div>
                <div class="mb-3">
                  <label class="form-label required" for="last_name"><b>Last Name</b></label>
                  <input class="form-control" id="last_name" name="account[last_name]" required="required" type="last_name">
                  <% if flash[:errors] && flash[:errors]["last_name"] %>
                    <% flash[:errors]["last_name"].each do |message| %>
                      <div><%= message %></div>
                    <% end %>
                  <% end %>
                </div>
                <div class="mb-3">
                  <label class="form-label required" for="email"><b>Email</b></label>
                  <input class="form-control" id="email" name="account[email]" required="required" type="email">
                  <% if flash[:errors] && flash[:errors]["email"] %>
                    <% flash[:errors]["email"].each do |message| %>
                      <div><%= message %></div>
                    <% end %>
                  <% end %>
                </div>
                <div class="mb-3">
                  <label class="form-label required" for="phone_number"><b>Phone Number</b></label>
                  <input class="form-control" id="phone_number" name="account[phone_number]" required="required" type="phone_number">
                  <% if flash[:errors] && flash[:errors]["phone_number"] %>
                    <% flash[:errors]["phone_number"].each do |message| %>
                      <div><%= message %></div>
                    <% end %>
                  <% end %>
                </div>
                <div class="mb-3">
                  <label class="form-label required" for="password"><b>Password</b></label>
                  <input class="form-control" id="password" name="account[password]" required="required" type="password">
                  <% if flash[:errors] && flash[:errors]["password"] %>
                    <% flash[:errors]["password"].each do |message| %>
                      <div><%= message %></div>
                    <% end %>
                  <% end %>
                </div>
                <input class="btn btn-secondary" data-disable-with="Sign Up" name="commit" type="submit" value="SignUp">
              </form>
              <br>
              <a <button class="btn btn-secondary" href= <%= new_account_block_login_path %> > LogIn</button> </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>